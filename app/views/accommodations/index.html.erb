<div class="navbar-lp">
  <%= render 'components/navbar' %>
</div>
<div class="wrapper">
  <div class="search_lp">


<%# main hp banner %>
<div class="banner lp" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1523301343968-6a6ebf63c672?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1769&q=80);">
  <div class="container">
    <%# search %>
    <%= render 'components/search' %>
  </div>
</div>

<div class="main-container-lp">


  <div class="map-accommodations-lp">
    <div class="container lp">
      <div class="container-all-accommodations">
        <div class="title-subtitle">
          <h4>All Accommodations</h4>
          <p>More than <%= @accommodations.size %> accommodations available.</em></p>
        </div>
        <%= render 'components/card' %>
      </div>
    </div>

    <div class="map-container">
      <div class="map-wraper">
        <div style="width: 100%; height: 800px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'components/footer' %>
