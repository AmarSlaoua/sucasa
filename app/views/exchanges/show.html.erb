              </div>
              <div class="exchange-second-block">
                <div class="flex-me">
                  <div class="flex-picture-buddy-valid 1">
                    <%= cl_image_tag @other_user_modality.accommodation.user.photo.key, crop: :fill, class: "avatar mr-3 msg valid" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
