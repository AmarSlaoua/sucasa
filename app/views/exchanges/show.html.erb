                  <p> <%= @other_user_modality.others %> </p>
                </div>
              </div>
              </div>
              <div class="flex-him">
                                <div class="flex-picture-buddy-valid 1">
                    <%= cl_image_tag @other_user_modality.accommodation.user.photo.key, crop: :fill, class: "avatar mr-3 msg valid" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <h6> <b><%= @other_user_modality.accommodation.user.first_name %>'s' contract </h6> </b>
                  </div>
              <div class="flex-valid-exchange-secondary-infos">
                <div class="valid-block valid-exchange-keys">
                  <h6>Keys</h6>
                <p> <%= @other_user_modality.keys %> </p>
